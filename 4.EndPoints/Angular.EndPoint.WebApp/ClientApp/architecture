src/
├── app/
│   ├── core/                    // Core module for singleton services and core components
│   │   ├── guards/              // Route guards
│   │   ├── interceptors/        // HTTP interceptors
│   │   ├── services/            // Singleton services (e.g., AuthService)
│   │   ├── core.module.ts       // CoreModule definition
│   │   └── index.ts
│   ├── shared/                  // Shared module for reusable components, directives, pipes
│   │   ├── components/          // Reusable UI components (e.g., buttons, modals)
│   │   ├── directives/          // Reusable directives
│   │   ├── pipes/               // Reusable pipes
│   │   ├── shared.module.ts     // SharedModule definition
│   │   └── index.ts
│   ├── features/                // Feature-specific modules
│   │   ├── feature1/            // Example: User module
│   │   │   ├── components/      // Components for Feature1
│   │   │   ├── services/        // Services for Feature1
│   │   │   ├── feature1.module.ts
│   │   │   └── index.ts
│   │   └── feature2/            // Another feature module
│   │       ├── components/
│   │       ├── services/
│   │       ├── feature2.module.ts
│   │       └── index.ts
│   ├── layouts/                 // Application layouts
│   │   ├── main-layout/         // Main layout
│   │   │   ├── header/
│   │   │   ├── footer/
│   │   │   ├── main-layout.component.ts
│   │   │   └── main-layout.component.html
│   │   ├── auth-layout/         // Authentication layout
│   │   └── index.ts
│   ├── app-routing.module.ts    // Global routes
│   ├── app.component.ts         // Root component
│   ├── app.module.ts            // Root module
│   └── index.ts
├── assets/                      // Static files like images, fonts, etc.
│   ├── images/
│   ├── icons/
│   └── styles/
├── environments/                // Environment-specific configurations
│   ├── environment.ts           // Development environment
│   └── environment.prod.ts      // Production environment
├── styles/                      // Global SCSS/CSS files
│   ├── themes/                  // Theming files
│   ├── mixins/                  // SCSS mixins
│   ├── variables.scss           // Global variables
│   └── global.scss              // Global styles
├── index.html                   // Main HTML file
└── main.ts                      // Application entry point
